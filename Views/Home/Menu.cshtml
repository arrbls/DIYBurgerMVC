@{
    ViewData["Title"] = "Burger Menu";
}

<div class="container py-4">
    <h1 class="mb-4 text-center">Our Signature Burgers</h1>

    <div class="list-group">
        <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <i class="bi bi-burger fs-4"></i>
            <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                    <h6 class="mb-0">Classic Beef</h6>
                    <p class="mb-0 opacity-75">Sesame Bun, Beef Patty, Ketchup</p>
                </div>
            </div>
        </div>
        <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <i class="bi bi-chicken-front-fill fs-4"></i>
            <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                    <h6 class="mb-0">Spicy Chicken</h6>
                    <p class="mb-0 opacity-75">Brioche Bun, Chicken Patty, Hot Sauce</p>
                </div>
            </div>
        </div>
        <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <i class="bi bi-leaf fs-4"></i>
            <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                    <h6 class="mb-0">Veggie Delight</h6>
                    <p class="mb-0 opacity-75">Whole Wheat Bun, Veggie Patty, Mustard</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary me-2"><i class="bi bi-house"></i> Back to Home</a>
        <a asp-action="Customize" asp-controller="Home" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Build Your Own Burger</a>
    </div>
</div>